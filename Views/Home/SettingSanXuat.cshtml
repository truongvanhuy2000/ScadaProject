<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet">

<style>
	.whole_page{
        font-family: 'Roboto';
	}

	.test_ca{
		font-size: 22px;
		text-transform: uppercase;
		border-top: 1px solid #ccc;
		font-weight: 600;

	}

	td.test{
		position: relative;
		border-top: 1px solid #ccc;
		border-bottom: 1px solid #ccc;
        text-align: left;
		font-family: 'Roboto';
		padding-top: 10px;
		padding-bottom: 10px;
		font-size: 18px;
		font-weight: 600;
	}
	
	.test_input {
		position: relative;
		border-top: 1px solid #ccc;
		border-bottom: 1px solid #ccc;
        text-align: left;
		font-family: 'Roboto';
		padding-top: 10px;
		padding-bottom: 10px;
		font-size: 18px;
		font-weight: 600;
		left: 22px;
	}

	table.data{
		position: relative;
		top: 25px;
        border-collapse: collapse;
		cursor:pointer;
        width: 100%;
	}
	
	.truong_ca{
    	position: relative;
		padding-top: 3px;
		padding-bottom: 3px;
    }

	.span_hour{
		position: relative;
		left: 10px;
	}

	.title{
		font-size: 38px;
		background-color: #F0F8FF;
	}

/*	.Name_truong_ca {
		position: relative;
		left: 130px;
		bottom: -9px;
	}*/

	.text-inf {
		position: relative;
		left: 30px;
	}
		
.Name_truong_ca {
  width: 40%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  position: relative;
  left: 40px;
}

		
.time {
  width: 20%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;	
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  position: relative;
  left: 70px;
}

input[type=submit] {
  width: 35%;
  background-color: #4CAF50;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  position: relative;
  left: 160px;
  bottom: 8px;

  
}

input[type=submit]:hover {
  background-color: #45a049;
}

.div_kip {
	position: relative;
	bottom: 5px;
	
	font-size: 30px;
	font-weight: 600;
	background-color: #D3D3D3;
	background-size: cover;
}

	
</style>
<body class="whole_page">
@*<h1 class="title">Cài đặt ca sản xuất</h1>*@
@if(TempData["Setting SanXuat Error"] != null) 
{
		<div id="popupdiv" style="border: 1px solid red;">
            @TempData["Setting SanXuat Error"]
        </div>
}
<div class="div_kip">Kíp 1</div>
 <form asp-controller="Home" asp-action="SetKip1" method="post">

    <div for="FullName">Tên trưởng ca:
    <span asp-validation-for="NameTruongCa" class="text-danger"></span>
    <input class="Name_truong_ca" type="text" width="100%" asp-for="NameTruongCa" placeholder="Tên trưởng ca..">
    </div>
	<div>
    <label  for="UserName">Thời gian:</label>
    <span asp-validation-for="TimeStartHour" class="text-danger"></span>
    <input type="text" asp-for="TimeStartHour" class="time" placeholder="Giờ..">
	
    <label  for="UserName"></label>
    <span asp-validation-for="TimeStarMinute" class="text"></span>
    <input type="text" class="time" asp-for="TimeStarMinute" placeholder="Phút..">
	</div>
	<input class = "button-inf" type="submit" value="Submit">
</form>
