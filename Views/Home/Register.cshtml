@{
    ViewData["Title"] = "Register";
}
@model Account
@Html.AntiForgeryToken()

<link rel="stylesheet" href="~/css/ContactForm.css" asp-append-version="true">
<div class="container">
    <h1>Đăng Ký Người Dùng</h1>
@if(TempData["Register Error"] != null) 
{
		<div id="popupdiv" style="border: 1px solid red;">
            @TempData["Register Error"]
        </div>
}

  <form asp-controller="Home" asp-action="Register" method="post">

    <label for="FullName">Họ tên</label>
    <span asp-validation-for="FullName" class="text-danger"></span>
    <input asp-for="FullName">
    

    <label for="UserName">Tên đăng nhập</label>
    <span asp-validation-for="UserName" class="text-danger"></span>
    <input asp-for="UserName">
    
    
    <label for="Password">Mật khẩu</label>
    <span asp-validation-for="Password" class="text-danger"></span>
    <input asp-for="Password" class="key" type="text" autocomplete="off"/>
    

    <label for="Phone">Số điện thoại</label>
     <span asp-validation-for="Phone" class="text-danger"></span>
    <input asp-for="Phone">
   

    <label for="Email">Email</label>
    <span asp-validation-for="Email" class="text-danger"></span>
    <input asp-for="Email">
    

    <label for="Gender">Giới tính</label>
    <select asp-for="Gender" name="gender">
      <option value="male" >Male</option>
      <option value="female">Female</option>
    </select>

    <label for="NhiemVu">Nhiệm vụ</label>
    <select asp-for="NhiemVu" name="nhiemvu">
      <option value="Giam Sat" >Giám sát</option>
      <option value="Hien Truong">Hiện trường</option>
    </select>

    <input type="submit" value="Submit">

  </form>
</div>
